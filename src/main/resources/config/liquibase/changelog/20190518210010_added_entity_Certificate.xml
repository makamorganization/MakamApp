<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Certificate.
    -->
    <changeSet id="20190518210010-1" author="jhipster">
        <createTable tableName="certificate">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="path" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="validity_end_date" type="date">
                <constraints nullable="true" />
            </column>

            <column name="signature" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="signature_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="user_details_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="course_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_certificate_course_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

    
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
