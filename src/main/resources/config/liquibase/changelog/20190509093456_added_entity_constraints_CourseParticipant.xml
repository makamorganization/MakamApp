<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity CourseParticipant.
    -->
    <changeSet id="20190509093456-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="course_participant"
                                 constraintName="fk_course_participant_course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="course_participant"
                                 constraintName="fk_course_participant_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_details"/>

    </changeSet>
</databaseChangeLog>
